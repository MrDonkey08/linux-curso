root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
charset = utf-8

# 4 space indentation
[*.{php,rs}]
indent_style = space
indent_size = 4

# 2 space indentation
[*.{htm,html,json,jsonc,lua,md,toml,yaml,yml,xml}]
indent_style = space
indent_size = 2

# Tab indentation
[Makefile]
indent_style = tab

# Tab indentation
[*.{bib,bash,c,cpp,cs,css,go,java,js,py,sass,scss,sh,tex,ts,zsh}]
indent_style = tab

# Windows files
[*.{bat,cmd,ps,ps1}]
indent_style = tab
# Windows-Style newlines
end_of_line = crlf
